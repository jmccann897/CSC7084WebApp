<!-- Form submission for new snapshots-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Snapshot</title>
    <link rel="stylesheet" href="mystyles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>

    <div class=".container">
        <%- include('header'); %>
      </div>

    <div class=".container">
        <%- include('nav'); %>
      </div>
    

<div class=".container">
    <div class="m-3 border border-primary">
      <form action="/addsnap" method="post" name="snapshot">
        
        <!-- Dropdown menu-->
        <%- include('dropdown'); %>
        
        

        <!-- Some text input for context-->
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Provide some context to your feelings</label>
          <textarea class="form-control" id="context" rows="3" name="context"></textarea>
        </div>

        <!--Button-->
        <!-- context needs placed before submit button otherwise post doesnt pick it up-->
        <div class="flex-button">
          <input type="submit" value="Add" />
        </div>


      </form>
    </div>
</div>



    



    <%- include('footer'); %>
  </body>
</html>
